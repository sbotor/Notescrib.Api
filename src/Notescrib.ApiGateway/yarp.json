{
  "Routes": {
    "auth": {
      "ClusterId": "identity",
      "Match": {
        "Path": "/api/identity/auth",
        "Hosts": [ "localhost" ],
        "Methods": [ "POST" ]
      },
      "Transforms": [
        { "PathSet": "/auth" }
      ]
    },
    "users": {
      "ClusterId": "identity",
      "AuthorizationPolicy": "Default",
      "Match": {
        "Path": "/api/identity/users/{**rest}",
        "Hosts": [ "localhost" ],
        "Methods": [ "GET", "POST", "DELETE" ]
      },
      "Transforms": [
        { "PathPattern": "/users/{**rest}" }
      ]
    },
    "create_user": {
      "ClusterId": "identity",
      "Match": {
        "Path": "/api/identity/users",
        "Hosts": [ "localhost" ],
        "Methods": [ "POST" ]
      },
      "Transforms": [
        { "PathSet": "/users" }
      ]
    },
    "activate_account": {
      "ClusterId": "identity",
      "Match": {
        "Path": "/api/identity/users/{id}/activate",
        "Hosts": [ "localhost" ],
        "Methods": [ "POST" ]
      },
      "Transforms": [
        { "PathPattern": "/users/{id}/activate" }
      ]
    },
    "init_password_reset": {
      "ClusterId": "identity",
      "Match": {
        "Path": "/api/identity/users/password",
        "Hosts": [ "localhost" ],
        "Methods": [ "POST" ]
      },
      "Transforms": [
        { "PathPattern": "/users/password" }
      ]
    },
    "reset_password": {
      "ClusterId": "identity",
      "Match": {
        "Path": "/api/identity/users/{id}/password",
        "Hosts": [ "localhost" ],
        "Methods": [ "PUT" ]
      },
      "Transforms": [
        { "PathPattern": "/users/{id}/password" }
      ]
    },
    "workspaces": {
      "ClusterId": "notes",
      "AuthorizationPolicy": "Default",
      "Match": {
        "Path": "/api/workspaces/{**rest}",
        "Hosts": [ "localhost" ],
        "Methods": [ "GET", "POST", "PUT", "DELETE" ]
      },
      "Transforms": [
        { "PathPattern": "/workspaces/{**rest}" }
      ]
    },
    "folders": {
      "ClusterId": "notes",
      "AuthorizationPolicy": "Default",
      "Match": {
        "Path": "/api/folders/{**rest}",
        "Hosts": [ "localhost" ],
        "Methods": [ "GET", "POST", "PUT", "DELETE" ]
      },
      "Transforms": [
        { "PathPattern": "/folders/{**rest}" }
      ]
    },
    "notes": {
      "ClusterId": "notes",
      "AuthorizationPolicy": "Default",
      "Match": {
        "Path": "/api/notes/{**rest}",
        "Hosts": [ "localhost" ],
        "Methods": [ "GET", "POST", "PUT", "DELETE" ]
      },
      "Transforms": [
        { "PathPattern": "/notes/{**rest}" }
      ]
    },
    "searchNotes": {
      "ClusterId": "notes",
      "Match": {
        "Path": "/api/notes",
        "Hosts": [ "localhost" ],
        "Methods": [ "GET" ]
      },
      "Transforms": [
        { "PathPattern": "/notes" }
      ]
    },
    "getNoteDetails": {
      "ClusterId": "notes",
      "Match": {
        "Path": "/api/notes/{id}",
        "Hosts": [ "localhost" ],
        "Methods": [ "GET" ]
      },
      "Transforms": [
        { "PathPattern": "/notes/{id}" }
      ]
    },
    "templates": {
      "ClusterId": "notes",
      "AuthorizationPolicy": "Default",
      "Match": {
        "Path": "/api/templates/{**rest}",
        "Hosts": [ "localhost" ],
        "Methods": [ "GET", "POST", "PUT", "DELETE" ]
      },
      "Transforms": [
        { "PathPattern": "/templates/{**rest}" }
      ]
    }
  },
  "Clusters": {
    "identity": {
      "Destinations": {
        "identity_api": {
          "Address": "https://localhost:5001/api"
        }
      }
    },
    "notes": {
      "Destinations": {
        "notes_api": {
          "Address": "https://localhost:5002/api"
        }
      }
    },
    "emails": {
      "Destinations": {
        "emails_api": {
          "Address": "https://localhost:5003/api"
        }
      }
    }
  }
}